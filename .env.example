# ============================================================================
# FINOX SCRAPER - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=finox_stock_data
DB_USER=root
DB_PASSWORD=your_secure_password_here

# ============================================================================
# PROXY CONFIGURATION (Optional)
# ============================================================================
# Uncomment and configure if using proxies
# PROXY_HTTP=http://proxy.example.com:8080
# PROXY_HTTPS=https://proxy.example.com:8080

# ============================================================================
# EMAIL ALERTS (Optional)
# ============================================================================
# SMTP configuration for email alerts
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# ALERT_FROM_EMAIL=alerts@finox.com
# ALERT_TO_EMAIL=admin@finox.com

# ============================================================================
# SLACK ALERTS (Optional)
# ============================================================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================================
# API AUTHENTICATION (Optional)
# ============================================================================
# JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ============================================================================
# APPLICATION ENVIRONMENT
# ============================================================================
# Options: development, staging, production
APP_ENV=development

# Enable debug mode (true/false)
DEBUG=true
